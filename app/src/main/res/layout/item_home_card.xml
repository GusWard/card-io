<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_medium"
    app:cardElevation="@dimen/global_elevation"
    app:cardCornerRadius="@dimen/global_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/material_large">

        <TextView
            style="@style/H3"
            android:id="@+id/itemHomeCardTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2"
            tools:text="Card View Title" />

        <TextView
            style="@style/B3"
            android:id="@+id/itemHomeCardDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/material_medium"
            android:maxLines="3"
            app:layout_constraintTop_toBottomOf="@id/itemHomeCardTitle"
            tools:text="Card View Description"/>

        <TextView
            style="@style/B4"
            android:id="@+id/itemHomeCardLink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/material_medium"
            android:textColor="@color/link_blue"
            android:ellipsize="marquee"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/itemHomeCardDescription"
            tools:text="Card View Link" />

        <ImageView
            android:id="@+id/itemHomeCardImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/material_medium"
            app:layout_constraintTop_toBottomOf="@id/itemHomeCardLink"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>