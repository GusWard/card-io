<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Header" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H1" parent="Header">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="H2" parent="Header">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H3" parent="Header">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="B1" parent="Body">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="B2" parent="Body">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="B3" parent="Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="B4" parent="Body">
        <item name="android:textSize">12sp</item>
    </style>

</resources>