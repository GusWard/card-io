<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Bottom sheet dialog -->

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#00000000</item>
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <!-- Material text inputs -->

    <style name="AppTextInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/transparent</item>
    </style>
    <style name="AppTexInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <!-- Text views -->

    <style name="Header" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H1" parent="Header">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="H2" parent="Header">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H3" parent="Header">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="B1" parent="Body">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="B2" parent="Body">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="B3" parent="Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="B4" parent="Body">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button" parent="Body">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">@dimen/material_large</item>
        <item name="android:paddingTop">@dimen/material_medium</item>
        <item name="android:paddingRight">@dimen/material_large</item>
        <item name="android:paddingBottom">@dimen/material_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:translationZ">@dimen/global_elevation</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button_background</item>
    </style>

</resources>